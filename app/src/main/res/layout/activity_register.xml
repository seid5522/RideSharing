
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.ridesharing.ui.login.LoginActivity">

    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:background="#fff">

            <!--  Header  Starts-->
            <LinearLayout android:id="@+id/header"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingTop="5dip"
                          android:paddingBottom="15dip" android:orientation="vertical">

                <ImageView android:src="@drawable/ic_launcher"
                           android:scaleType="fitCenter"
                           android:layout_gravity="center"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                </ImageView>

            </LinearLayout>
            <!--  Header Ends -->
            <!-- Footer Start -->
            <LinearLayout android:id="@+id/footer"
                          android:layout_width="fill_parent"
                          android:layout_height="90dip"
                          android:layout_alignParentBottom="true" android:orientation="vertical">
            </LinearLayout>
            <!-- Footer Ends -->

            <!-- Registration Form -->
            <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_below="@id/header">

                <!-- Username -->
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:text="Username"/>
                <EditText android:id="@+id/reg_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:layout_marginBottom="10dip"/>
                <!--  Email Label -->
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:text="Email"/>
                <EditText android:id="@+id/reg_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:singleLine="true"
                    android:inputType="textWebEmailAddress"
                    android:layout_marginBottom="10dip"/>
                <!-- Password Label -->
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:text="Password"/>
                <EditText android:id="@+id/reg_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:password="true"
                    android:singleLine="true"
                    android:layout_marginTop="5dip"/>
                <!-- First Name Label -->
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="#372c24"
                          android:text="First Name"/>
                <EditText android:id="@+id/reg_firstname"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="2dip"
                          android:singleLine="true"
                          android:inputType="textPersonName"
                          android:layout_marginBottom="10dip"/>
                <!-- Last Name Label -->
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="#372c24"
                          android:text="Last Name"/>
                <EditText android:id="@+id/reg_lastname"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="2dip"
                          android:singleLine="true"
                          android:inputType="textPersonName"
                          android:layout_marginBottom="10dip"/>
                <!-- Birthday Label-->
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:text="Birthday"/>

                <DatePicker android:id="@+id/reg_birthday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:layout_marginBottom="10dip"
                    android:singleLine="true"

                    android:calendarViewShown="false" />
                <!-- Address Label -->


                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="#372c24"
                          android:text="Address"/>
                <EditText android:id="@+id/reg_address"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="2dip"
                          android:singleLine="true"
                          android:layout_marginBottom="10dip"/>
                <!-- Address2 Label -->
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="#372c24"
                          android:text="Address 2"/>
                <EditText android:id="@+id/reg_address2"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="2dip"
                          android:singleLine="true"
                          android:layout_marginBottom="10dip"/>
                <!-- City Label -->
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="#372c24"
                          android:text="City"/>
                <EditText android:id="@+id/reg_city"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="2dip"
                          android:singleLine="true"
                          android:layout_marginBottom="10dip"/>
                <!-- State Label -->
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="#372c24"
                          android:text="State"/>
                <EditText android:id="@+id/reg_state"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="2dip"
                          android:singleLine="true"
                          android:layout_marginBottom="10dip"/>

                <!--  Zip Label -->
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="#372c24"
                          android:text="Zip Code"/>
                <EditText android:id="@+id/reg_zip"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="2dip"
                          android:singleLine="true"
                          android:inputType="number"
                          android:layout_marginBottom="10dip"/>
                <!--  Phone Label -->
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="#372c24"
                          android:text="Phone Number"/>
                <EditText android:id="@+id/reg_phone"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="2dip"
                          android:singleLine="true"
                          android:inputType="number"
                          android:layout_marginBottom="10dip"/>
                <!-- Register Button -->
                <Button android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Register New Account"/>
                <!-- Link to Login Screen -->
                <TextView android:id="@+id/link_to_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:layout_marginBottom="40dip"
                        android:gravity="center"
                        android:text="Already have an account? Login here!"
                        android:textSize="20dip"
                        android:textColor="#025f7c"
                        android:layout_below="@id/btnRegister"/>

            </LinearLayout>
            <!-- Registration Form Ends -->
        </RelativeLayout>
    </ScrollView>
</LinearLayout>