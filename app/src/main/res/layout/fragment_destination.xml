<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".ui.user.destinationFragment">



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_gravity ="center_horizontal|center_vertical"
                  android:gravity="center_horizontal|center_vertical"
                  android:background="@color/sugar_kane">



        <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

            <ImageView android:src="@drawable/ic_launcher"
                       android:scaleType="fitCenter"
                       android:paddingTop="30dp"
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
            </ImageView>

            <TextView  android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Destination"
                       android:textSize="30dp"
                       android:paddingTop="30dp"
                       android:paddingBottom="30dp"/>
            <Spinner
                    android:id="@+id/options_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            <AutoCompleteTextView
                    android:id="@+id/toDest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="To:"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:layout_gravity="center"/>

            <AutoCompleteTextView
                    android:id="@+id/fromDest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/currentLocation"
                    android:hint="From:"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:layout_gravity="center"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >

                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/beginTimedatePicker"
                    android:spinnersShown="true"
                    android:calendarViewShown="false"
                    android:layout_gravity="left"/>
                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/beginTimePicker"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="right"/>
                </LinearLayout>


            <EditText
                    android:id="@+id/passengersDest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:hint="#Passengers:"
                    />
         <Button
                 android:id="@+id/submitDest"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:hint="Submit"
                />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
